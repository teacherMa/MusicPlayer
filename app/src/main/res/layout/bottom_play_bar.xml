<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingTop="24dp"
    android:paddingBottom="24dp">

    <ImageView
        android:id="@+id/change_state"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:padding="8dp"
        android:src="@drawable/ic_pause_36dp" />

    <ImageView
        android:id="@+id/pre_music"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:padding="8dp"
        android:src="@drawable/ic_skip_previous_36dp"
        android:layout_toStartOf="@id/change_state"
        android:layout_marginEnd="16dp"/>

    <ImageView
        android:id="@+id/next_music"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toEndOf="@id/change_state"
        android:padding="8dp"
        android:src="@drawable/ic_skip_next_36dp"
        android:layout_marginStart="16dp"/>

</RelativeLayout>